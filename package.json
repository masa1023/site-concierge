{
  "name": "site-concierge",
  "version": "1.0.0",
  "description": "Site Concierge - RAG AI Chat Widget powered by Weaviate and Google Gemini",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:chat & npm run dev:admin",
    "dev:chat": "npm run dev --workspace=chat-widget",
    "dev:admin": "npm run dev --workspace=admin",
    "build:chat": "npm run build --workspace=chat-widget",
    "build:admin": "npm run build --workspace=admin",
    "build": "npm run build:chat && npm run build:admin",
    "start:admin": "npm run start --workspace=admin"
  },
  "dependencies": {},
  "devDependencies": {},
